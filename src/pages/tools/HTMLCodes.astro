---
import DefaultLayout from '../../layouts/DefaultLayout.astro'
import { CharacterCodes } from '../../components/CharacterCodes/CharacterCodes'
---

<DefaultLayout title='HTML Character Codes'>
  <main class='mx-auto my-8 max-w-[872px] px-4 text-stone-300 md:px-0'>
    <a href='/' class='font-light text-gray-300'> &larr; Back to tools list</a>

    <h1 class='mt-2 text-4xl font-semibold text-jefferson-light'>HTML Characters Codes</h1>
    <h1 class='mt-2 text-xl font-semibold text-gray-400'>Search to find the code</h1>

    <hr class='my-8 h-1 rounded border-0 bg-gray-700' />

    <noscript>
      HTML Code Symbol Finder are being generated client-side, you need to enable JavaScript to use
      this page.
    </noscript>

    <CharacterCodes client:only='solid-js' />
  </main>
</DefaultLayout>
